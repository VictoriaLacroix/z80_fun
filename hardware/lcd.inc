; vim: ft=asm
; hardware/lcd.inc
; DMG Gameboy LCD Includes

; LCD Control
rLCDC   EQU $FF40

LCDC_ON         EQU %10000000
LCDC_WIN_MAP0   EQU %00000000
LCDC_WIN_MAP1   EQU %01000000
LCDC_WIN_ON     EQU %00100000
LCDC_TILESET0   EQU %00000000
LCDC_TILESET1   EQU %00010000
LCDC_BG_MAP0    EQU %00000000
LCDC_BG_MAP1    EQU %00001000
LCDC_OBJ_8x8    EQU %00000000
LCDC_OBJ_8x16   EQU %00000100
LCDC_OBJ_ON     EQU %00000010
LCDC_BG_ON      EQU %00000001

LCDC_BIT_BG              EQU 0
LCDC_BIT_OBJ             EQU 1
LCDC_BIT_OBJ_SIZE        EQU 2
LCDC_BIT_BG_MAP          EQU 3
LCDC_BIT_TILESET         EQU 4
LCDC_BIT_WIN             EQU 5
LCDC_BIT_WIN_MAP         EQU 6
LCDC_BIT_ENABLE          EQU 7

; LCD Status
rSTAT   EQU $FF41

STAT_SCANLINE_ENABLE    EQU %01000000
STAT_OAM_               EQU %00100000
STAT_VBLANK             EQU %00010000
STAT_HBLANK             EQU %00001000
STAT_SCANLINE_FLAG      EQU %00000100

STAT_MODE_MASK          EQU %00000011
STAT_MODE_HBLANK        EQU $00
STAT_MODE_VBLANK        EQU $01
STAT_MODE_BUSY_OAM      EQU $02
STAT_MODE_BUSY_TRANSFER EQU $03

; Scrolling
rSCY    EQU $FF42
rSCX    EQU $FF43

; LCD Scanline
rSCANL  EQU $FF44 ; 0 - 153. Scanline >= 144 indicates VBlank.
rSCANC  EQU $FF45

; LCD DMA
rDMA    EQU $FF46

; GB Palettes
rBGP    EQU $FF47
rOBP0   EQU $FF48
rOBP1   EQU $FF49

DMGP_COLOR3_MASK        EQU %11000000
DMGP_COLOR2_MASK        EQU %00110000
DMGP_COLOR1_MASK        EQU %00001100
DMGP_COLOR0_MASK        EQU %00000011
DMGP_COLOR3_SHIFT       EQU 6
DMGP_COLOR2_SHIFT       EQU 4
DMGP_COLOR1_SHIFT       EQU 2
DMGP_COLOR0_SHIFT       EQU 0

; Window Layer Scrolling
rWY     EQU $FF4A
rWX     EQU $FF4B

