; vim: ft=asm
; hardware/lcd/cgb.inc
; CGB Gameboy Color LCD Includes

; GBC Palette
rBCPS   EQU $FF68
rBCPD   EQU $FF69
rOCPS   EQU $FF6A
rOCPD   EQU $FF6B

CGBP_INDEX_MASK         EQU %00111111
CGBP_INDEX_INCREMENT    EQU %10000000

CGBP_CHAN_SIZE          EQU 5
CGBP_BLUE_SHIFT         EQU 10
CGBP_GREEN_SHIFT        EQU 5
CGBP_RED_SHIFT          EQU 0
CGBP_BLUE_MASK          EQU %0111110000000000
CGBP_GREEN_MASK         EQU %0000001111100000
CGBP_RED_MASK           EQU %0000000000011111

; GBC Vram Banks Selection
rVBK    EQU $FF4F
VBK_0   EQU %00000000
VBK_1   EQU %00000001

; GBC Clock Speed Setting
rKEY1   EQU $FF4D
KEY1F_DOUBLE    EQU %10000000
KEY1F_NORMAL    EQU %00000000
KEY1F_SWITCH    EQU %00000001

; GBC Infrared.
rIR     EQU $FF5D
IR_WRITE_MASK           EQU %00000001
IR_WRITE_OFF            EQU %00000000
IR_WRITE_ON             EQU %00000001
IR_READ_MASK            EQU %00000010
IR_READ_RECEIVING       EQU %00000000
IR_READ_NORMAL          EQU %00000010
IR_READ_ENABLE          EQU %11000000
IR_READ_DISABLE         EQU %00000000

; GBC DMA.
rDMA1   EQU $FF51
rDMA2   EQU $FF52
rDMA3   EQU $FF53
rDMA4   EQU $FF54
rDMA5   EQU $FF55
DMA_XFER_GENERAL        EQU %00000000
DMA_XFER_HBLANK         EQU %10000000
DMA_XFER_ACTIVE         EQU %00000000
DMA_XFER_INACTIVE       EQU %10000000

; GBC Wram Banks Selection
rWBK            EQU $FF70
WBK_MASK        EQU %00000111

