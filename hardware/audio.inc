; hardware/audio.inc
; Constants and Addresses for GB Hardware Audio.

; Pulse Channels.
rPU1SWP EQU $FF10 ; Sweep
rPU1PAT EQU $FF11 ; Pattern
rPU1ENV EQU $FF12 ; Envelope
rPU1LSB EQU $FF13 ; Freq LSB
rPU1MSB EQU $FF14 ; Freq MSB
rPU2SWP EQU $FF15 ; ...
rPU2PAT EQU $FF16
rPU2ENV EQU $FF17
rPU2LSB EQU $FF18
rPU2MSB EQU $FF19

PU_DIR_INC              EQU %00001000
PU_DIR_DEC              EQU %00000000
PU_SWP_TIME_MASK        EQU %01110000
PU_SWP_SHIFT_MASK       EQU %00000111
PU_ENV_INITIAL_MASK     EQU %11110000
PU_ENV_SWEEP_MASK       EQU %00000111
PU_PAT_DUTY_MASK        EQU %11000000
PU_PAT_LENGTH_MASK      EQU %00011111
PU_FREQ_HIGH_RESTART    EQU %10000000
PU_FREQ_HIGH_COUNT      EQU %00100000
PU_FREQ_HIGH_MASK       EQU %00000111

; Wave Channel
rWAVTGL EQU $FF1A
rWAVLEN EQU $FF1B
rWAVVOL EQU $FF1C
rWAVLSB EQU $FF1D
rWAVMSB EQU $FF1E

WAV_TGL_ENABLE          EQU %10000000
WAV_TGL_DISABLE         EQU %00000000
WAV_VOL_0               EQU %00000000
WAV_VOL_100             EQU %00100000
WAV_VOL_50              EQU %01000000
WAV_VOL_25              EQU %01100000
WAV_FREQ_HIGH_RESTART   EQU %10000000
WAV_FREQ_HIGH_COUNT     EQU %01000000
WAV_FREQ_HIGH_MASK      EQU %00000111

; Noise Channel.
rNOILEN EQU $FF20
rNOIENV EQU $FF21
rNOIPOL EQU $FF22
rNOIPLA EQU $FF23

NOI_LEN_MASK            EQU %00011111

NOI_ENV_INITIAL_MASK    EQU %11110000
NOI_ENV_DIR_INC         EQU %00001000
NOI_ENV_DIR_DEC         EQU %00000000
NOI_ENV_SWP_MASK        EQU %00000111

NOI_POL_CLOCK           EQU %11110000
NOI_POL_STEP            EQU %00001000
NOI_POL_RATIO           EQU %00000111

NOI_PLA_RESTART         EQU %10000000
NOI_PLA_COUNT           EQU %01000000

; Audio volume.
rVOL    EQU $FF24

VOL_RIGHT_VIN   EQU %10000000
VOL_RIGHT_MASK  EQU %01110000
VOL_LEFT_VIN    EQU %00001000
VOL_LEFT_MASK   EQU %00000111

; Audio panning.
rPAN    EQU $FF25

PAN_PU1_L       EQU %00000001
PAN_PU1_R       EQU %00010000
PAN_PU2_L       EQU %00000010
PAN_PU2_R       EQU %00100000
PAN_WAV_L       EQU %00000100
PAN_WAV_R       EQU %01000000
PAN_NOI_L       EQU %00001000
PAN_NOI_R       EQU %10000000

; Audio toggle.
rAUDTGL EQU $FF26

AUDTGL_PU1      EQU %00000001
AUDTGL_PU2      EQU %00000010
AUDTGL_WAV      EQU %00000100
AUDTGL_NOI      EQU %00001000
AUDTGL_ENABLE   EQU %10000000
AUDTGL_DISABLE  EQU %00000000

